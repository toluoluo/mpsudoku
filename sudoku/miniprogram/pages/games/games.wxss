/* pages/games/games.wxss */
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.games-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 0rpx;
  box-sizing: border-box;
} 

.play-view{
  margin: 10rpx;
  border: 4rpx solid #e2e3e5;
  border-color: #000;
  border-radius: 6rpx;
}

.dark {
  background-color: #f0ffff;
}

.light {
  background-color: #f5fffa;
}

