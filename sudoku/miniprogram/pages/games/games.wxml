    </view>    
  </view>

  <view>
    <t-grid>
      <t-grid-item text="撤回" icon="rollback" bindclick="onClick"/>
      <t-grid-item text="清除" icon="clear-formatting" bindclick="onClick" />
      <t-grid-item text="铅笔" icon="pen-ball" bindclick="onClick" badge-props="{{ {count: 'off'} }}"/>
      <t-grid-item text="提示" icon="gesture-press" bindclick="onClick" badge-props="{{ {count: adCt} }}"/>
    </t-grid>
  </view>

